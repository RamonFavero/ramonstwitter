<%- include("partials/header");-%>
<h1>Compose</h1>
<form class="" action="/posts" method="post">
  <div class="compose-person">
    <img class="img-min" src="/images/<%=  logeduser.image  %>.png"  alt="">
    <h3><%= logeduser.username %></h3>
    <input type="hidden" name="imagepost" value="<%= logeduser.image %>">
<input type="hidden" name="userpost" value="<%= logeduser.username %>">

  </div>
  <div class="form-group">
    <label>Your post:</label>
    <textarea class="form-control"  rows="8" type="text" name="newText" autocomplete="off"></textarea>
  </div>

  <button class="btn btn-primary mb-2" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer");-%>
